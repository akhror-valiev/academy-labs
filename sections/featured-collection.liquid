      "info": "Select the first image"
    },
    {
      "type": "text",
      "id": "image_1_title",
      "label": "Image 1 Title",
      "default": "WOMEN"
    },
    {
      "type": "text",
      "id": "image_1_products",
      "label": "Image 1 Products",
      "default": "115 PRODUCTS"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2",
      "info": "Select the second image"
    },
    {
      "type": "text",
      "id": "image_2_title",
      "label": "Image 2 Title",
      "default": "MEN"
    },
    {
      "type": "text",
      "id": "image_2_products",
      "label": "Image 2 Products",
      "default": "90 PRODUCTS"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3",
