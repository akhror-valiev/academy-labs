.feature-container {
    display: flex;
    padding: 60px;
    flex-direction: column;
    position: relative;
    width: 100%;
    height: 300px; /* Adjust height as needed */
    overflow: hidden;
}

.content {
position: absolute;
top: 50%;
left: 50%;
transform: translate(-50%, -50%);
color: white; /* Text color */
text-align: center;
z-index: 1; /* Ensures content appears above the trapezoid */
}

.content img {
max-width: 100%; /* Ensure image doesn't exceed container width */
}

.trapezoid {
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 100%;
background-color: #3498db; /* Background color of the trapezoid */
clip-path: polygon(0 0, 100% 0, 80% 100%, 20% 100%); /* Defines the shape of the trapezoid */
}
.img-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.feature-img{
    position: relative;
}
.img-text{
    position: absolute;
    right: 30px;
    text-align: end;
}
.feature-title{
    padding-top: -10px;
}

.feature-paragraph{
    margin-top:20px;
}